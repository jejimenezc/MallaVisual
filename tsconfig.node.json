/* tsconfig.node.json (TESTS / Node) */
{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["node", "vitest/importMeta", "vitest/globals"],
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "vite.config.*",
    "scripts/**/*.ts"
  ]
}
